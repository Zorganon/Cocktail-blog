<p id="notice"><%= notice %></p>

<h1>Listing Blogs</h1>
<div class="container">
  <table>
    <thead>
      <tr>
        <th>Title</th>
        <th>Entry</th>
        <th>Date</th>
        <th>Drink</th>
        <th colspan="3"></th>
      </tr>
    </thead>
  
    <tbody>
      <% @blogs.each do |blog| %>
        <tr>
          <td><%= blog.title %></td>
          <td><%= blog.entry %></td>
          <td><%= blog.date %></td>
          <td><%= blog.drink %></td>
          <td><%= link_to 'Show', blog %></td>
          <td><%= link_to 'Edit', edit_blog_path(blog) %></td>
          <td><%= link_to 'Destroy', blog, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<br>

