<p id="notice"><%= notice %></p>
<div class="container">
  <h1>Listing Posts</h1>
  
  <% @posts.each do |post| %>
    <div class="post-block">
      <h3><%= post.title %></h3>
      <h4><%= post.drink_name %></h4>
      <p><%= post.date %></p>
      <%= link_to 'Show', post %>
      <%= link_to 'Edit', edit_post_path(post) %>
      <%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %>
    </div>
  <% end %>
  
  <br>
  
  <%= link_to 'New Post', new_post_path %>

</div>